extends layout

block jumbotron
  .jumbotron
    .container
      h1= title
      p Welcome to #{title}
  .disqus_thread
    
block footer
  footer(class="footer")
    div(class="container")
      p(class="copyright") George Theofilis &copy; !{(new Date()).getFullYear()}

block script
  script(type="text/javascript")
    var disqus_shortname = 'myspellbook'; // required: replace example with your forum shortname
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  noscript
    Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>